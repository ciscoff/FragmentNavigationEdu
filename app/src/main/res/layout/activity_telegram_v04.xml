<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <SeekBar
        android:id="@+id/seek_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="20dp" />

    <TextView
        android:id="@+id/tv_progress"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:gravity="center"
        tools:text="test" />

    <FrameLayout
        android:id="@+id/scene_root"
        android:layout_width="match_parent"
        android:layout_height="300dp">

        <View
            android:layout_width="match_parent"
            android:layout_height="0.2dp"
            android:layout_gravity="top"
            android:background="@android:color/darker_gray" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.2dp"
            android:layout_gravity="bottom"
            android:background="@android:color/darker_gray" />

        <ImageView
            android:id="@+id/iv_rounded"
            android:layout_width="@dimen/circle_diameter_v4"
            android:layout_height="@dimen/circle_diameter_v4"
            android:layout_gravity="center_vertical|start"
            android:layout_marginStart="@dimen/margin_rounded"
            android:contentDescription="@null"
            android:scaleType="centerCrop"
            tools:srcCompat="@drawable/anonymous" />

        <ImageView
            android:id="@+id/iv_rect"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_gravity="center_vertical|start"
            android:layout_marginStart="@dimen/margin_rounded"
            android:alpha="1"
            android:contentDescription="@null"
            android:scaleType="centerCrop"
            android:visibility="invisible"
            app:srcCompat="@drawable/valery"
            tools:srcCompat="@drawable/anonymous" />

    </FrameLayout>
</LinearLayout>